<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/row_image_TV"
        android:layout_width="97dp"
        android:layout_height="89dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar_icon" />

    <TextView
        android:id="@+id/row_titleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Name: "
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/row_image_TV"
        app:layout_constraintTop_toTopOf="@+id/row_image_TV" />

    <TextView
        android:id="@+id/row_DaimondPrice_TV"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Price: "
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/row_image_TV"
        app:layout_constraintStart_toEndOf="@+id/row_image_TV" />

    <TextView
        android:id="@+id/row_TV_diamondPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/row_DaimondPrice_TV"
        app:layout_constraintEnd_toStartOf="@+id/row_checkBox"
        app:layout_constraintStart_toEndOf="@+id/row_DaimondPrice_TV"
        app:layout_constraintTop_toTopOf="@+id/row_DaimondPrice_TV"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/row_TV_diamond_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/row_titleName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/row_titleName"
        app:layout_constraintTop_toTopOf="@+id/row_titleName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:text="Carats: "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/row_DaimondPrice_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/row_image_TV"
        app:layout_constraintTop_toBottomOf="@+id/row_titleName" />

    <TextView
        android:id="@+id/row_TV_diamondCarats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <CheckBox
        android:id="@+id/row_checkBox"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/row_TV_diamondPrice"
        app:layout_constraintEnd_toEndOf="@+id/row_TV_diamondCarats"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/row_TV_diamondPrice"
        app:layout_constraintTop_toTopOf="@+id/row_TV_diamondPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>